apiVersion: policy.open-cluster-management.io/v1
kind: Policy
metadata:
  name: policy-trident-vault-user-secret
  namespace: {{ .Values.policy_namespace }}
  annotations:
    policy.open-cluster-management.io/standards: AutoShiftv2
    policy.open-cluster-management.io/categories: Trident
    policy.open-cluster-management.io/controls: OpenShift Standard
spec:
  disabled: false
  ### dependencies should include the policies from VSO install
  dependencies:
    - name: trident-orchestrator
      namespace: {{ .Values.policy_namespace }}
      apiVersion: policy.open-cluster-management.io/v1
      compliance: Compliant
      kind: Policy
  policy-templates:
    - objectDefinition:
        apiVersion: policy.open-cluster-management.io/v1
        kind: ConfigurationPolicy
        metadata:
          name: trident-vault-connection
        spec:
          remediationAction: enforce # will be overridden by remediationAction in parent policy
          severity: high
          object-templates-raw: |
            apiVersion: secrets.hashicorp.com/v1beta1
            kind: VaultConnection
            metadata:
              name: vault-connection
              namespace: {{ .Values.trident.namespace }}
            spec:
              address: {{ .Values.vault.connectionAddress }}
              skipTLSVerify: true
    - objectDefinition:
        apiVersion: policy.open-cluster-management.io/v1
        kind: ConfigurationPolicy
        metadata:
          name: trident-vault-auth
        spec:
          remediationAction: enforce # will be overridden by remediationAction in parent policy
          severity: high
          object-templates-raw: |
            apiVersion: secrets.hashicorp.com/v1beta1
            kind: VaultAuth
            metadata:
              name: vault-auth
              namespace: {{ .Values.trident.namespace }}
            spec:
              jwt:
                serviceAccount: default
                tokenExpirationSeconds: 600
              kubernetes:
                role: {{ .Values.vault.role }}
                serviceAccount: default
                tokenExpirationSeconds: 600
              method: kubernetes
              mount: kubernetes
              namespace: root
              vaultConnectionRef: vault-connection
    - objectDefinition:
        apiVersion: policy.open-cluster-management.io/v1
        kind: ConfigurationPolicy
        metadata:
          name: trident-vault-static-secret
        spec:
          remediationAction: enforce # will be overridden by remediationAction in parent policy
          severity: high
          object-templates-raw: |
            apiVersion: secrets.hashicorp.com/v1beta1
            kind: VaultStaticSecret
            metadata:
              name: vault-secret 
              namespace: {{ .Values.trident.namespace }}
            spec:
              destination:
                create: true
                name: netapp-admin
                overwrite: true
                transformation: {}
              hmacSecretData: true
              mount: {{ .Values.netapp.mount }}
              namespace: {{ .Values.netapp.namespace }}
              path: {{ .Values.netapp.path }}
              refreshAfter: 5s
              type: kv-v2
              vaultAuthRef: vault-auth
---
apiVersion: cluster.open-cluster-management.io/v1beta1
kind: Placement
metadata:
  name: placement-policy-trident-vault-user-secret
  namespace: {{ .Values.policy_namespace }}
spec:
  clusterSets:
  {{- range $clusterSet, $value := $.Values.managedClusterSets }}
    - {{ $clusterSet }}
  {{- end }}
  {{- range $clusterSet, $value := $.Values.hubClusterSets }}
    - {{ $clusterSet }}
  {{- end }}
  predicates:
    - requiredClusterSelector:
        labelSelector:
          matchExpressions:
            - key: 'autoshift.io/trident'
              operator: In
              values:
              - 'true'
  tolerations:
    - key: cluster.open-cluster-management.io/unreachable
      operator: Exists
    - key: cluster.open-cluster-management.io/unavailable
      operator: Exists
---
apiVersion: policy.open-cluster-management.io/v1
kind: PlacementBinding
metadata:
  name: placement-policy-trident-vault-user-secret
  namespace: {{ .Values.policy_namespace }}
placementRef:
  name: placement-policy-trident-vault-user-secret
  apiGroup: cluster.open-cluster-management.io
  kind: Placement
subjects:
  - name: policy-trident-vault-user-secret
    apiGroup: policy.open-cluster-management.io
    kind: Policy
{{- end }}