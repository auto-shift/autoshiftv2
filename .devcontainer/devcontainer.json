{
  "name": "autoshift-dev",
  "workspaceMount": "",
  "runArgs": [
    "--hostname=vscode",
    "--userns=keep-id",
    "--volume=${localWorkspaceFolder}:/workspaces/${localWorkspaceFolderBasename}"
  ],
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "updateRemoteUserUID": true,
  "build": {
    "dockerfile": "Containerfile"
  },
  "features": {},
  "customizations": {
    "vscode": {
      "editor.renderWhitespace": "all",
      "extensions": [
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "cSpell.words": [
          "autoshift",
          "AutoShiftv2",
          "baremetal",
          "Containerfile",
          "infrastructure",
          "gitops",
          "kubeconfig",
          "musthave",
          "nmstate",
          "nncp",
          "nooba",
          "nvme",
          "storageclass",
          "userns"
        ],
        "files.associations": {
          "*.bu": "yaml",
          "*.yml": "yaml",
          "*.yaml": "yaml"
        }
      }
    }
  }
}